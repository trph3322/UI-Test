<Window x:Class="FoodOrderApp_Test.Views.LoginWindow"
        x:Name="LoginWD"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FoodOrderApp_Test.Views"
        xmlns:uc="clr-namespace:FoodOrderApp_Test.Views.UserControls"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        DataContext="{StaticResource LoginVM}"
        Title="LoginWindow" Height="820" Width="1420"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal" 
        TextOptions.TextRenderingMode="Auto"        
        Background="{x:Null}"
        FontFamily="{DynamicResource MaterialDesignFont}" 
        Foreground="{x:Null}" 
        AllowsTransparency="True" 
        WindowStyle="None" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        >
     

    <Grid>
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <!--Image-->
            <Grid Grid.Column="0" Margin="0 0 -10 0">
                <Border CornerRadius="10 0 0 10" BorderThickness="0 0 10 0" Effect="{StaticResource dropShadow}">
                    <Border.Background>
                        <ImageBrush ImageSource="/Resources/Images/food.jpg" Stretch="UniformToFill"/>
                    </Border.Background>
                </Border>
            </Grid>

            <!--Login-->
            <Grid Grid.Column="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20"></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>

                    <!--Control Bar-->
                    <uc:ControlBarUC Grid.Row="0"></uc:ControlBarUC>

                    <!--Login Grid-->
                    <Grid Grid.Row="1" Margin="150 100">
                        <TextBlock Text="Đăng nhập"
                                    HorizontalAlignment="Center"
                                    Margin="0 40 0 0"
                                    FontSize="40"
                                    FontWeight="Bold"
                                    Foreground="{StaticResource Orange1}">
                        </TextBlock>

                        <Grid Margin="60 140 60 300">
                            <Grid.RowDefinitions>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <materialDesign:PackIcon 
                                        Kind="Account"
                                        Foreground="{StaticResource Gray}"
                                        Width="30"
                                        Height="30"
                                        VerticalAlignment="Bottom"
                                        HorizontalAlignment="Left"
                                        Margin="0 0 0 -5"/>
                                <TextBox
                                        x:Name="txtUsername"
                                        TabIndex="0"
                                        Text="{Binding UserName}"
                                        materialDesign:HintAssist.Hint="Tài khoản"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                        Foreground="Black"
                                        FontSize="16"
                                        FontWeight="Medium"
                                        materialDesign:HintAssist.Foreground="{StaticResource Gray}"
                                        materialDesign:TextFieldAssist.UnderlineBrush="{StaticResource Gray}"
                                        Width="230"
                                        VerticalAlignment="Bottom" 
                                        HorizontalAlignment="Right">
                                </TextBox>
                            </Grid>

                            <Grid Grid.Row="1">
                                
                                <materialDesign:PackIcon 
                                        Kind="Lock"
                                        Foreground="{StaticResource Gray}"
                                        Width="30"
                                        Height="30"
                                        VerticalAlignment="Bottom"
                                        HorizontalAlignment="Left"
                                        Margin="0,0,0,-3.4"/>
                                <PasswordBox
                                        x:Name="txtPassword"
                                        TabIndex="1"
                                        materialDesign:HintAssist.Hint="Mật khẩu"
                                        Foreground="Black"
                                        FontSize="16"
                                        FontWeight="Medium"
                                        materialDesign:HintAssist.Foreground="{StaticResource Gray}"
                                        materialDesign:TextFieldAssist.UnderlineBrush="{StaticResource Gray}"
                                        Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" 
                                        Width="230"
                                        VerticalAlignment="Bottom" 
                                        HorizontalAlignment="Right" Grid.ColumnSpan="2" Margin="0,0,0,-0.4">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="PasswordChanged">
                                            <i:InvokeCommandAction Command="{Binding PasswordChangedCommand}" 
                                                   CommandParameter="{Binding ElementName=txtPassword}"/>
                                            </i:EventTrigger>
                                      </i:Interaction.Triggers>
                                   </PasswordBox>
                            </Grid>
                        </Grid>

                        <Button
                            Style="{StaticResource forgotPasswordBtn}"     
                            TabIndex="4"
                            Content="Quên mật khẩu"
                            FontSize="15"
                            Foreground="{StaticResource Gray}"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            Height="22"
                            Width="110"
                            Padding="0"
                            Margin="60 55 0 0"
                            Background="Transparent"
                            Cursor="Hand"
                            Command="{Binding OpenForgotPasswordWDCommand}"
                            CommandParameter="{Binding ElementName=LoginWD}">
                        </Button>

                        <Button
                            x:Name="btnLogin"
                            TabIndex="2"
                            IsDefault="True"
                            Command="{Binding OpenLogInWDCommand}"
                            CommandParameter="{Binding ElementName=LoginWD}"
                            Style="{StaticResource GreenBtn}"
                            Content="Đăng nhập"
                            Width="270"
                            Height="40"
                            Margin="0 170 0 0"
                            FontSize="20"
                            Foreground="White" >
                        </Button>

                        <TextBlock 
                            Text="Chưa có tài khoản?"
                            Foreground="{StaticResource Gray}"
                            FontSize="15"
                            VerticalAlignment="Bottom"
                            HorizontalAlignment="Center"
                            Margin="0 0 0 70">

                        </TextBlock>

                        <Button
                            x:Name="btnSignUp"
                            TabIndex="3"
                           
                            Style="{StaticResource GrayBtn}"
                            Content="Đăng ký"
                            Width="270"
                            Height="40"
                            FontSize="20"
                            VerticalAlignment="Bottom"
                            HorizontalAlignment="Center"
                            Margin="0 0 0 20"
                            Command="{Binding OpenSignUpWDCommand}"
                            CommandParameter="{Binding ElementName=LoginWD}">
                        </Button>

                        <!--Background for Form-->
                        <Rectangle 
                            Fill="White"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            RadiusY="20" 
                            RadiusX="20" 
                            Panel.ZIndex="-1"
                            Effect="{StaticResource dropShadow}">
                        </Rectangle>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>

        <Rectangle 
            Fill="#e6e6e6"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            RadiusY="10" 
            RadiusX="10" 
            Panel.ZIndex="-2"
            Effect="{StaticResource dropShadow}"
            Margin="10">
        </Rectangle>
    </Grid>

</Window>
